<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리를 선택해주세요"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_filtered"
        android:clickable="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_filtered_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_delivery"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <ImageView
        android:id="@+id/btn_delivery"
        android:layout_width="50dp"
        android:clickable="true"
        android:layout_height="50dp"
        android:src="@drawable/btn_delivery_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_parcel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_filtered"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <ImageView
        android:id="@+id/btn_parcel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@drawable/btn_parcel_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_taxi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_delivery"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <ImageView
        android:id="@+id/btn_taxi"
        android:layout_width="50dp"
        android:layout_marginTop="30dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:src="@drawable/btn_taxi_search"
        app:layout_constraintEnd_toStartOf="@+id/btn_room_mate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_parcel"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <ImageView
        android:id="@+id/btn_room_mate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn_room_mate_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_taxi"
        app:layout_constraintTop_toBottomOf="@+id/tv_report" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="전체"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_filtered"
        app:layout_constraintTop_toBottomOf="@+id/btn_filtered" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달"
        android:layout_marginLeft="9dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_delivery"
        app:layout_constraintTop_toBottomOf="@id/btn_delivery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="택배"
        android:layout_marginLeft="9dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_parcel"
        app:layout_constraintTop_toBottomOf="@id/btn_parcel" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="택시"
        android:layout_marginLeft="9dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_taxi"
        app:layout_constraintTop_toBottomOf="@id/btn_taxi" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="룸메"
        android:layout_marginLeft="9dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_room_mate"
        app:layout_constraintTop_toBottomOf="@id/btn_room_mate" />



</androidx.constraintlayout.widget.ConstraintLayout>