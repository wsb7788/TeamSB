<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/gachon_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />
    <TextView
        android:id="@+id/id_et"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:paddingLeft="10sp"
        android:text="닉네임을 설정해주세요."
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textColorHighlight="#FF0000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.20" />

    <EditText
        android:id="@+id/nickname_et"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:background="#FDF2D0"
        android:gravity="left|center_vertical"
        android:hint="*2~8자 이내."
        android:textColorHint="#AEABAB"
        android:paddingLeft="10sp"
        android:textColor="#AEABAB"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/id_et"
        app:layout_constraintTop_toBottomOf="@+id/id_et" />

    <Button
        android:id="@+id/check_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:text="확 인"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#F9DA78"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname_et" />

    <Button
        android:id="@+id/set_btn"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:backgroundTint="#F9DA78"
        android:text="중복확인"
        app:layout_constraintStart_toEndOf="@+id/nickname_et"
        app:layout_constraintTop_toBottomOf="@+id/id_et" />

</androidx.constraintlayout.widget.ConstraintLayout>