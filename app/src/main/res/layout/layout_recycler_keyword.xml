<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/keyword_rectangle"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingRight="5dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_inside_rcv_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="a"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:src="@drawable/ic_delete_keyword"
        app:layout_constraintBottom_toBottomOf="@id/tv_inside_rcv_keyword"
        app:layout_constraintStart_toEndOf="@id/tv_inside_rcv_keyword"
        app:layout_constraintTop_toTopOf="@id/tv_inside_rcv_keyword" />
</androidx.constraintlayout.widget.ConstraintLayout>